{% extends 'base.html.twig' %}

{% block nav %}
    <li class="active"><a href="#">Registros</a></li>
    <li><a data-toggle="modal" data-target="#correos">Correos</a></li>
{% endblock %}

{% block navr %}
    <li class="active"><a href="{{ path('logout') }}">Logout<span class="sr-only">(current)</span></a></li>
{% endblock %}

{% block body %}


    <div class="container">

        <ul class="breadcrumb">
            <li><a href="{{ path('admin') }}">Solicitudes de registro</a></li>
            <li class="active">{{ registro.nombre }} {{ registro.paterno }} {{ registro.materno }}</li>

        </ul>

        {% for flash_message in app.session.flashbag.get('notice') %}
            <div class="alert alert-success" role="alert">
                <i class="fa fa-check"></i> {{ flash_message }}
            </div>
        {% endfor %}



        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="page-header col-lg-12">
                            <h2><i class="fa fa-user"></i> {{ registro.nombre }} {{ registro.paterno }} {{ registro.materno }}<small> - {{ registro.mail }}</small></h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <dl>
                            <dt>Dirección</dt>
                            <dd>{{ registro.direccion }}</dd>
                        </dl>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <table class="table">
                            <tr>
                                <td>Carta solicitud</td><td><a href="{{ vich_uploader_asset(registro, 'solicitudFile') }}"  target="_blank"/>{{ registro.solicitudName }}</a></td>
                            </tr>
                            <tr>
                                <td>Currículum Vitae</td><td><a href="{{ vich_uploader_asset(registro, 'cvFile') }}"  target="_blank" />{{ registro.cvName }}</a></td>
                            </tr>
                            <tr>
                                <td>Comprobante oficial de grado</td><td><a href="{{ vich_uploader_asset(registro, 'comprobanteFile') }}"  target="_blank" />{{ registro.comprobanteName }}</a></td>
                            </tr>
                            <tr>
                                <td>Proyecto de investigación</td><td><a href="{{ vich_uploader_asset(registro, 'proyectoFile') }}"  target="_blank" />{{ registro.proyectoName }}</a></td>
                            </tr>
                            <tr>
                                <td>Artículos</td><td><a href="{{ vich_uploader_asset(registro, 'articulosFile') }}"  target="_blank" />{{ registro.articulosName }}</a></td>
                            </tr>

                        </table>
                    </div>
                </div>

                {#<dl>#}
                {#<dt>Carta solicitud</dt>#}

                {#<dd><a href="{{ vich_uploader_asset(registro, 'solicitudFile') }}"  target="_blank"/>{{ registro.solicitudName }}</a></dd>#}

                {#</dl>#}
                {#</div>#}

                {#<div class="col-lg-2">#}
