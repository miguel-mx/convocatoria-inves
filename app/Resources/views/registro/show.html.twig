                {#<dt>Comprobante oficial de grado</dt>#}
                {#<dd><a href="{{ vich_uploader_asset(registro, 'comprobanteFile') }}"  target="_blank" />{{ registro.comprobanteName }}</a></dd>#}
                {#</dl>#}
                {#</div>#}

