                {#</dl>#}
                {#</div>#}
                <div class="row">
                    <div class="page-header col-lg-12" >
                        <h1><small><i class="fa fa-check"></i> Recomendaciones</small></h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <dl>
                            <dt>Referencia 1</dt>
                            <dd>{{ registro.ref1nombre }}</dd>
                        </dl>
                    </div>

                    <div class="col-lg-4">
                        <dl>
                            <dt>Correo</dt>
                            <dd>{{ registro.ref1mail }}</dd>
                        </dl>
                    </div>

                    <div class="col-lg-4">
                        <dl>
                            <dt>Recomendación 1</dt>
                            <dd><a href="{{ vich_uploader_asset(registro, 'ref1recomFile') }}"  target="_blank" />{{ registro.ref1recomName }}</a></dd>
                        </dl>
                    </div>
                </div>
                <div class="row">
                    <div class="page-header col-lg-12" >
                        &nbsp;
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <dl>
                            <dt>Referencia 2</dt>
                            <dd>{{ registro.ref2nombre }}</dd>
                        </dl>
                    </div>

                    <div class="col-lg-4">
                        <dl>
                            <dt>Correo</dt>
                            <dd>{{ registro.ref2mail }}</dd>
                        </dl>
                    </div>


                    <div class="col-lg-4">
                        <dl>
                            <dt>Recomendación 2</dt>
                            <dd><a href="{{ vich_uploader_asset(registro, 'ref2recomFile') }}"  target="_blank" />{{ registro.ref2recomName }}</a></dd>
                        </dl>
                    </div>
                </div>
                <div class="row">
                    <div class="page-header col-lg-12">
                        <h1><small><i class="fa fa-edit"></i> Datos de control</small></h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <dl>
                            <dt>Seleccionado</dt>
                            {% if registro.activo == true %}
                                <dd><span class="label label-success">Si</span></dd>
                            {% else %}
                                <dd><span class="label label-danger">No</span></dd>
                            {% endif %}
                        </dl>
                    </div>
                    <div class="col-lg-4">
                        <dl>
                            <dt>Biomatemáticas</dt>
                            {% if registro.biomat == true %}
                                <dd><span class="label label-success">Si</span></dd>
                            {% else %}
                                <dd><span class="label label-danger">No</span></dd>
                            {% endif %}
                        </dl>
                    </div>

                    <div class="col-lg-2">
                        <dl>
                            <dt>Creado</dt>
                            <dd class="text-muted">{{ registro.createdAt|date('d-m-Y H:i:s') }}</dd>
                        </dl>

                    </div>
                    <div class="col-lg-2">
                        <dl>
                            <dt>Modificado</dt>
                            <dd class="text-muted">{{ registro.updatedAt|date('d-m-Y H:i:s') }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-lg-12 col-lg-offset-4">

            <a href="{{ path('admin') }}" class="btn btn-primary">
                Ver solicitudes
            </a>
            <a href="{{ path('registro_eval', { 'id': registro.id }) }}" class="btn btn-primary">
                Evaluar solicitud
            </a>
        </div>
    </div>

{% endblock %}

